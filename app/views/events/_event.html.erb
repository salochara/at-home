<div class="event">
  <% if event.photo.present? %>
  <div class="event-image" style="background: linear-gradient(to bottom,rgba(20,20,20, 0.8),rgba(76,76,76,0.2) 30%), url(<%= cl_image_path(event.photo, width: 300, crop: "scale", :quality=>"auto:low")  %>) center / cover no-repeat;"></div>
  <% else %>
  <div class="event-image" style="background: linear-gradient(to bottom,rgba(20,20,20, 0.8),rgba(76,76,76,0.2) 30%), url(<%= image_path('placeholder.jpg', width: 300, crop: "scale", :quality=>"auto:low")  %>) center / cover no-repeat;"></div>
  <% end %>
  <div class="event-content">
    <div class="event-title"><%= event.title %></div>
    <div class="event-location">
      <%= event.location %>
    </div>
    <div class="event-joining">
      <%= link_to "View Details", event_path(event), class: "btn btn-default" %>
    </div>
  </div>
</div>



