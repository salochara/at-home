<%= simple_form_for :search, url: results_events_path, method: :get do |f| %>
  <%= f.input :query, label: false, placeholder: "Search" %>
<% end %>

<div class="container">
  <div id="events">
    <h2>Events:</h2>
    <div class="row">
      <% @events.each do |event| %>
        <div class="col-xs-12 col-sm-6 col-md-4">
          <%= render event %>
        </div>
      <% end %>
    </div>
  </div>
</div>


