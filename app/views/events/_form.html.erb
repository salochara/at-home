<%= simple_form_for(@event) do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :capacity %>
  <%= f.input :location %>
  <%= f.input :date %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>

  <%= f.submit "Create Cocktail", class: "btn btn-primary" %>
<% end %>
